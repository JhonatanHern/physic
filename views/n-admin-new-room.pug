doctype html
html
	head
		title Nueva Sala
		meta(charset="utf-8")
		link(rel="shortcut icon" href="/favicon.ico")
		meta(name="viewport" content="width=device-width, initial-scale=1.0")
		link(rel="stylesheet" href='/css/v2-template.css')
	body
		h2 Crear Sala
		form(method="POST" action="/admin/newRoom")
			input(placeholder="Nombre" name="identificador_en_clinica" required max-length="10")
			input(placeholder="Equipos" name="equipos" required max-length="200")
			input(placeholder="Próximo Levantamiento (aaaa-mm)" name="ProximoLev" required maxlength="7")
			input(placeholder="Último Levantamiento (aaaa-mm)" name="UltimoLev" required maxlength="7")
			textarea(placeholder="Observaciones" name="observaciones" maxlength="200")
			input(type="hidden" name="rif" value=rif)
			input(type='submit')